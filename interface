import tkinter as tk
from tkinter import messagebox

# Função para verificar vencedor
def verificar_vencedor():
    for i in range(3):
        # Verificar linhas
        if tabuleiro[i][0] == tabuleiro[i][1] == tabuleiro[i][2] != "":
            return tabuleiro[i][0]
        # Verificar colunas
        if tabuleiro[0][i] == tabuleiro[1][i] == tabuleiro[2][i] != "":
            return tabuleiro[0][i]
    # Verificar diagonais
    if tabuleiro[0][0] == tabuleiro[1][1] == tabuleiro[2][2] != "":
        return tabuleiro[0][0]
    if tabuleiro[0][2] == tabuleiro[1][1] == tabuleiro[2][0] != "":
        return tabuleiro[0][2]
    return None

def verificar_empate():
    for linha in tabuleiro:
        if "" in linha:
            return False
    return True

def clique(linha, coluna):
    global jogador_atual

    if tabuleiro[linha][coluna] == "":
        tabuleiro[linha][coluna] = jogador_atual
        botoes[linha][coluna].config(text=jogador_atual, state="disabled")

        vencedor = verificar_vencedor()
        if vencedor:
            messagebox.showinfo("Fim de jogo", f"Jogador {vencedor} venceu!")
            reiniciar_jogo()
        elif verificar_empate():
            messagebox.showinfo("Fim de jogo", "Empate!")
            reiniciar_jogo()
        else:
            jogador_atual = "O" if jogador_atual == "X" else "X"
            label_turno.config(text=f"Vez do jogador {jogador_atual}")

def reiniciar_jogo():
    global jogador_atual, tabuleiro

    jogador_atual = "X"
    tabuleiro = [["" for _ in range(3)] for _ in range(3)]

    for i in range(3):
        for j in range(3):
            botoes[i][j].config(text="", state="normal")

    label_turno.config(text=f"Vez do jogador {jogador_atual}")

# Interface
janela = tk.Tk()
janela.title("Jogo da Velha")
janela.resizable(False, False)
janela.configure(bg="#f0f0f0")

# Jogador atual
jogador_atual = "X"

# Tabuleiro
tabuleiro = [["" for _ in range(3)] for _ in range(3)]
botoes = [[None for _ in range(3)] for _ in range(3)]

# Label de turno
label_turno = tk.Label(janela, text="Vez do jogador X", font=("Helvetica", 14, "bold"), bg="#f0f0f0")
label_turno.grid(row=0, column=0, columnspan=3, pady=(10, 5))

# Criar os botões do tabuleiro
for i in range(3):
    for j in range(3):
        botoes[i][j] = tk.Button(
            janela,
            text="",
            width=6,
            height=3,
            font=("Helvetica", 24, "bold"),
            command=lambda linha=i, coluna=j: clique(linha, coluna)
        )
        botoes[i][j].grid(row=i+1, column=j, padx=5, pady=5)

# Botão de reiniciar
botao_reiniciar = tk.Button(janela, text="Reiniciar", font=("Helvetica", 12), command=reiniciar_jogo)
botao_reiniciar.grid(row=4, column=0, columnspan=3, pady=(10, 10))

# Iniciar o loop da interface
janela.mainloop()
